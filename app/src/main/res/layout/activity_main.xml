<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ntk.ambrose.testandroidlabs.MainActivity"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:textSize="18pt"
                android:gravity="right"
                android:textColor="#ffffff"
                android:layout_marginEnd="8dp"
                android:textDirection="rtl"
                android:layout_span="4"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="7"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="8"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="9"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/btDel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="DEL"
                android:textSize="10pt"
                android:background="#44bd32"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="4"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="5"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="6"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/btAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="+"
                android:textSize="10pt"
                android:background="#44bd32"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="1"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="2"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="3"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/btSub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="-"
                android:textSize="10pt"
                android:background="#44bd32"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btFloat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="."
                android:textSize="10pt"
                android:background="#44bd32"
                />
            <Button android:id="@+id/bt0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="0"
                android:textSize="10pt"
                android:background="#2980b9"
                />
            <Button android:id="@+id/btDiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="/"
                android:textSize="10pt"
                android:background="#44bd32"
                />
            <Button android:id="@+id/btMul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="*"
                android:textSize="10pt"
                android:background="#44bd32"
                />
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btMAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="M+"
                android:textSize="10pt"
                android:background="#f1c40f"
                />
            <Button android:id="@+id/btMSub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="M-"
                android:textSize="10pt"
                android:background="#f1c40f"
                />
            <Button android:id="@+id/btMC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="MC"
                android:textSize="10pt"
                android:background="#f1c40f"
                />
            <Button android:id="@+id/btAns"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="25dp"
                android:text="="
                android:textSize="10pt"
                android:background="#44bd32"
                />
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>
